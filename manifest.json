{
  "manifest_version": 3,
  "name": "Klartext",
  "version": "1.0",
  "description": "Simplify websites using AI",
  "permissions": ["storage", "activeTab", "contextMenus"],
  "host_permissions": ["https://*/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
